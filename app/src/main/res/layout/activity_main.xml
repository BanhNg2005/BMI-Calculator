<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fbf8f3"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        app:icon="@drawable/profile"
        app:iconSize="24dp"
        app:iconTint="@android:color/black"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="25dp"
        app:backgroundTint="#FFFFFF"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        app:icon="@drawable/setting"
        app:iconSize="24dp"
        app:iconTint="@android:color/black"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="25dp"
        app:backgroundTint="#FFFFFF" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"
        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiAge"
        android:layout_width="100dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/tvAge"
        app:layout_constraintTop_toBottomOf="@id/tvAge"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        android:hint="@string/ageTextInputLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/weight"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiWeight"
        android:layout_width="100dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="@id/tvWeight"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        android:hint="@string/weightTextInputLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="numberDecimal"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/gender"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvAge"
        app:layout_constraintTop_toBottomOf="@id/tiAge"
        android:layout_marginTop="20dp"
        />

<!--    <Spinner-->
<!--        android:id="@+id/mySpinner"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tvGender"-->
<!--        app:layout_constraintLeft_toLeftOf="@id/tiAge"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:background="@drawable/spinner_border"-->
<!--        android:padding="4dp"-->
<!--        android:spinnerMode="dropdown"-->
<!--        />-->


    <ImageButton
        android:id="@+id/imgMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/manImgBtn"
        app:layout_constraintTop_toBottomOf="@id/tvGender"
        app:layout_constraintLeft_toLeftOf="@id/tiAge"
        android:background="#fbf8f3"
        android:src="@drawable/man"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        />

    <View
        android:id="@+id/viewVertical"
        android:layout_width="1dp"
        app:layout_constraintHeight="20dp"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintLeft_toRightOf="@id/imgMan"
        app:layout_constraintTop_toBottomOf="@id/tvGender"
        android:layout_marginStart="10dp"
        />

    <ImageButton
        android:id="@+id/imgWoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/womanImgBtn"
        app:layout_constraintTop_toBottomOf="@id/tvGender"
        app:layout_constraintLeft_toRightOf="@id/viewVertical"
        android:background="#fbf8f3"
        android:src="@drawable/woman"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"/>


    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        app:layout_constraintTop_toBottomOf="@id/tiWeight"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiHeight"
        android:layout_width="100dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="@id/tvHeight"
        app:layout_constraintTop_toBottomOf="@id/tvHeight"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        android:hint="@string/heightTextInputLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/tiHeight" />

    <LinearLayout
        android:id="@+id/resultBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_bmi_level"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvBmiCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvResultVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_bmi_result"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <com.example.bmifrontend.BMICustomProgressBar
        android:id="@+id/pbHealth"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/bmiTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/bmiTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/resultBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:background="#F0F0F0">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BMI Range"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Underweight"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&lt; 18.5"
                android:textSize="13sp"
                android:gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#F8F8F8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Normal"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18.5 - 24.9"
                android:textSize="13sp"
                android:gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Overweight"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25.0 - 29.9"
                android:textSize="13sp"
                android:gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#F8F8F8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Obese"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‰¥ 30.0"
                android:textSize="13sp"
                android:gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_your_bmi_goal"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/pbHealth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/goalInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvGoal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enter_goal_bmi"
            android:layout_marginEnd="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_goal"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>