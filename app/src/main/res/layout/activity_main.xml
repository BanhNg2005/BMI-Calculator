<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fbf8f3"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        app:icon="@drawable/profile"
        app:iconSize="24dp"
        app:iconTint="@android:color/black"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="25dp"
        app:backgroundTint="#FFFFFF"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2"

        android:text=""
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"

        app:icon="@drawable/setting"
        app:iconSize="24dp"
        app:iconTint="@android:color/black"
        app:iconGravity="textStart"
        app:iconPadding="0dp"

        app:cornerRadius="25dp"
        app:backgroundTint="#FFFFFF" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"
        android:textSize="15sp"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiAge"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/tvAge"
        app:layout_constraintTop_toBottomOf="@id/tvAge"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/weight"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/imageView2"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiWeight"
        android:layout_width="100dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/tvWeight"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/gender"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvAge"
        app:layout_constraintTop_toBottomOf="@id/tiAge"
        android:layout_marginTop="20dp"

        />



    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGender"
        app:layout_constraintLeft_toLeftOf="@id/tiAge"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_border"
        android:padding="4dp"
        android:spinnerMode="dropdown"
        />



    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        app:layout_constraintTop_toBottomOf="@id/tiWeight"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiHeight"
        android:layout_width="100dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/tvHeight"
        app:layout_constraintTop_toBottomOf="@id/tvHeight"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:backgroundTint="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/mySpinner" />


    <LinearLayout
        android:id="@+id/resultBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_bmi_level"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvResultVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_bmi_result"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_your_bmi_goal"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tiGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiGoal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_goal_bmi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/tvGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>